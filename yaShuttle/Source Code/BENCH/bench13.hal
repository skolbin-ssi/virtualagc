 BENCH13: PROGRAM;
   DECLARE SCALAR DOUBLE, EVAL;
   FACT: FUNCTION(INARG) SCALAR DOUBLE;
     DECLARE INARG INTEGER;
     DECLARE ISTART SCALAR DOUBLE;
     ISTART = 1.0;
     IF INARG <=1 THEN RETURN 1.0;
     DO FOR TEMPORARY I = 2 TO INARG;
       ISTART = ISTART SCALAR$(@DOUBLE)(I);
     END;
     RETURN ISTART;
   CLOSE FACT;
   EVAL = 1.0;
   DO FOR TEMPORARY I = 1 TO 8;
     EVAL = EVAL + 1/FACT(I);
   END;
   WRITE(6) 'EVAL = ',EVAL;
 CLOSE BENCH13;
