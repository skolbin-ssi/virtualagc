C/ Adapted from PDF p. 255 of "Programming in HAL/S".

 T255: PROGRAM;

     DECLARE B BIT(8);
E    .
M    B = BIT(25);
E                           .
M    WRITE(6) CHARACTER    (B);
S                      @HEX

E                           .
M    WRITE(6) CHARACTER    (B);
S                      @DEC

E                           .
M    WRITE(6) CHARACTER    (B);
S                      @OCT

E                           .
M    WRITE(6) CHARACTER    (B);
S                      @BIN

E            .
M   WRITE(6) B;

 CLOSE T255;