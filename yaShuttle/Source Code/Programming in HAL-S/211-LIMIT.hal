     LIMIT:
     FUNCTION(VALUE, BOUND) SCALAR;
        DECLARE SCALAR,
                VALUE, BOUND;
        IF VALUE > BOUND THEN
           RETURN BOUND;
        IF VALUE < -BOUND THEN
           RETURN -BOUND;
        RETURN VALUE;
     CLOSE LIMIT;
